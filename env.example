# Gustav Louv Website - Environment Variables Template
# Copy this to .env and fill in your actual values

# Application
APP_ENV=development
APP_PORT=8002
DEBUG=true

# Database (Railway PostgreSQL or Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/gustavlouv_db

# Secret Keys (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Storage
STORAGE_TYPE=local  # or 'supabase'
UPLOAD_DIR=./uploads
PROOF_ARTIFACTS_DIR=./proof_artifacts
EDITION_BUNDLES_DIR=./edition_bundles

# IPFS
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_GATEWAY_URL=http://localhost:8080/ipfs/

# GPG
GPG_KEY_ID=your-gpg-key-fingerprint
GPG_PASSPHRASE=your-gpg-passphrase

# Danish QTSP (Qualified Trust Service Provider)
QTSP_API_URL=https://timestamp-provider.example.dk
QTSP_API_KEY=your-qtsp-api-key

# OpenTimestamps (optional)
OTS_ENABLED=false
OTS_CALENDAR_URL=https://alice.btc.calendar.opentimestamps.org

# Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
PLAUSIBLE_DOMAIN=gustavlouv.com
PLAUSIBLE_API_URL=https://plausible.io

# Admin
ADMIN_EMAIL=gustav@gustavlouv.com
ADMIN_PASSWORD_HASH=  # Generate with passlib

# CORS (if needed)
ALLOWED_ORIGINS=http://localhost:8002,https://gustavlouv.com

# Railway (set automatically)
# PORT=8002
# RAILWAY_ENVIRONMENT=production

